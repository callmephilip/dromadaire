/* Simple standard theme */

Screen {
    background: $background;
}

AppHeader {
    background: $primary;
    color: $text;
    dock: top;
    height: 1;
}

#trading-pairs-panel {
    background: $surface;
    width: 80%;
    border-right: solid $primary;
}

#pool-details-view {
    background: $panel;
    width: 20%;
}

#chain-selection-modal {
    background: $surface;
    border: solid $primary;
    width: 60%;
    height: 70%;
    margin: 2;
    padding: 2;
}

#chain-selection-title {
    text-align: center;
    background: $primary;
    color: $text;
    padding: 1;
    margin-bottom: 1;
}

#chain-selection-help {
    text-align: center;
    color: $text-muted;
    margin-top: 1;
}