/* Dromadaire Trading App Styles */

Screen {
    layout: vertical;
}

/* App Header */
AppHeader {
    dock: top;
    height: 1;
    background: $warning;
    layout: horizontal;
    padding: 0 1;
}

#app-name {
    width: 1fr;
    text-align: left;
    color: $text;
    text-style: bold;
}

#app-version {
    width: auto;
    text-align: right;
    color: $text-muted;
    text-style: dim;
}

/* Main Trading Interface */
TradingInterface {
    height: 1fr;
    background: $background;
}

#main-trading-area {
    layout: horizontal;
    height: 1fr;
}

/* Trading Pairs Panel */
#trading-pairs-panel {
    width: 60%;
    border-right: tall $border;
    background: $surface;
    padding: 1;
}

#pairs-title {
    color: $text;
    text-style: bold;
    margin-bottom: 1;
}

#pairs-list {
    height: 1fr;
    background: $surface;
}

/* Deposit Form Panel */
#deposit-form-panel {
    width: 40%;
    background: $surface;
    padding: 1;
}

#deposit-title {
    color: $text;
    text-style: bold;
    margin-bottom: 1;
}

#selected-pair {
    color: $accent;
    text-style: bold;
    margin-bottom: 1;
}

#price-range-label, #deposit-amount-label {
    color: $text-muted;
    margin-top: 1;
    margin-bottom: 1;
}

#low-price, #high-price, #sol-amount, #xsol-amount {
    margin-bottom: 1;
}

#change-pool-btn {
    margin-top: 1;
    margin-bottom: 1;
    background: $surface;
    border: tall $border;
}

#deposit-btn {
    margin-top: 1;
    background: $success;
    color: $text;
    text-style: bold;
}

/* Navigation Tabs */
NavigationTabs {
    dock: bottom;
    height: 3;
    background: $surface;
    border-top: tall $border;
    layout: horizontal;
    padding: 1;
}

#chains-tab, #search-tab, #swap-tab {
    width: 1fr;
    margin: 0 1;
    background: $surface;
    border: tall $border;
}

/* Footer */
Footer {
    dock: bottom;
    height: 1;
    background: $primary;
}

/* Dark theme adjustments */
.textual-dark {
    background: $background;
}

/* Light theme adjustments */
.textual-light {
    background: $background;
}

/* Spinner Widget Styles */
SpinnerWidget {
    color: $accent;
}

.textual-light SpinnerWidget {
    color: $accent;
}