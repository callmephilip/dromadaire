/* Simple standard theme */

Screen {
    background: $background;
}

AppHeader {
    /*background: $primary;*/
    color: $text;
    dock: top;
    height: 1;
    layout: horizontal;
}

#app-name {
    width: 25%;
    content-align: left middle;
}

#app-version {
    width: 50%;
    content-align: center middle;
    text-style: bold;
}

#wallet-address {
    width: 25%;
    content-align: right middle;
    color: $text-muted;
}

#trading-pairs-panel {
    background: $surface;
    width: 75%;
    /* border-right: solid $primary; */
}

#pool-details-view {
    background: $panel;
    width: 25%;
}

#chain-selection-modal {
    background: $surface;
    border: solid $primary;
    width: 60%;
    height: auto;
    margin: 0;
    padding: 0;
    content-align: center middle;
}

#chain-selection-title {
    text-align: center;
    background: $primary;
    color: $text;
    padding: 1;
    margin-bottom: 1;
}

#chain-selection-help {
    text-align: center;
    color: $text-muted;
    margin-top: 1;
    width: 100%;
}

.hidden {
    display: none;
}

#pools-search {
    margin-bottom: 1;
}